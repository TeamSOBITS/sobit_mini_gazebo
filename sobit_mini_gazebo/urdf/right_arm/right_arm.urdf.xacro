<?xml version="1.0" encoding="UTF-8" ?>
<robot name="right_arm" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find sobit_mini_description)/urdf/right_arm/right_arm.transmission.xacro" />

  <xacro:macro name="right_arm" params="prefix parent">

    <joint name="${prefix}_shoulder_fixed_joint" type="fixed">
      <parent link="${parent}" />
      <child link="${prefix}_shoulder_fixed_link" />
      <origin rpy="0 0 0" xyz="0.0 0.0 0.375988" />
      <axis xyz="0 0 1" />
      <limit effort="30" lower="-0.1" upper="0.1" velocity="1.571" />
    </joint>

    <link name="${prefix}_shoulder_fixed_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_SHOULDER_ROLL_JOINT.stl" />
        </geometry>
        <material name="black"/>
      </visual>

      <collision>
        <origin xyz="0.0 -0.0695 0.0" rpy="${M_PI/2.0} ${M_PI/2.0} 0.0"/>
        <geometry>
          <box size="0.059 0.034 0.139"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 -0.0695 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <mass value="0.25108187" />
        <inertia ixx="${1/12*0.24821318*(0.139**2 + 0.059**2)}" ixy="0.0" ixz="0.0" 
                 iyy="${1/12*0.24821318*(0.034**2 + 0.139**2)}" iyz="0.0" 
                 izz="${1/12*0.24821318*(0.034**2 + 0.059**2)}" />
      </inertial>
    </link>

    <joint name="${prefix}_shoulder_roll_joint" type="revolute">
      <parent link="${prefix}_shoulder_fixed_link" />
      <child link="${prefix}_shoulder_roll_link" />
      <origin rpy="0 0 0" xyz="0.0 -0.1415 0.015161" />
      <axis xyz="0 -1 0" />
      <limit effort="30" lower="${-M_PI/2.0}" upper="${M_PI}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_shoulder_roll_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_SHOULDER_FLEX_JOINT.stl" />
        </geometry>
        <material name="black"/>
      </visual>

      <collision>
        <origin xyz="0.0 -0.034 0.0" rpy="0.0 ${M_PI/2.0} 0.0" />
        <geometry>
          <box size="0.041 0.068 0.052"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 -0.034 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <mass value="0.21455283" />
        <inertia ixx="${1/12*0.21455283*(0.052**2 + 0.041**2)}" ixy="0.0" ixz="0.0" 
                 iyy="${1/12*0.21455283*(0.068**2 + 0.052**2)}" iyz="0.0" 
                 izz="${1/12*0.21455283*(0.068**2 + 0.041**2)}" />
      </inertial>
    </link>

    <joint name="${prefix}_shoulder_pan_joint" type="revolute">
      <parent link="${prefix}_shoulder_roll_link" />
      <child link="${prefix}_shoulder_pan_link" />
      <origin rpy="0 0 0" xyz="0.0 -0.05375 0.0" />
      <axis xyz="1 0 0" />
      <limit effort="30" lower="-1.22173" upper="${M_PI/2.0}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_shoulder_pan_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_ELBOW_TILT_JOINT.stl" />
        </geometry>
        <material name="black"/>
      </visual>

      <collision>
        <origin xyz="0.0 -0.073 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <box size="0.045 0.1 0.044"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 -0.064 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <mass value="0.21436632" />
        <inertia ixx="${1/12*0.21436632*(0.044**2 +0.045**2)}" ixy="0.0" ixz="0.0" 
                 iyy="${1/12*0.21436632*(0.121**2 + 0.044**2)}" iyz="0.0"
                 izz="${1/12*0.21436632*(0.121**2 + 0.045**2)}" />
      </inertial>
    </link>

    <joint name="${prefix}_elbow_tilt_joint" type="revolute">
      <parent link="${prefix}_shoulder_pan_link" />
      <child link="${prefix}_elbow_tilt_link" />
      <origin rpy="0 0 0" xyz="0 -0.11125 0" />
      <axis xyz="0 0 1" />
      <limit effort="30" lower="0.0" upper="${M_PI/2.0}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_elbow_tilt_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_arm/R_ARM_WRIST_TILT_JOINT.stl" />
        </geometry>
      <material name="black"/>
      </visual>

      <collision>
        <origin xyz="0.0 -0.05 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <box size="0.044 0.057 0.057"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 -0.055 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <mass value="0.26134254" />
        <inertia ixx="${1/12*0.26134254*(0.057**2 + 0.044**2)}" ixy="0.0" ixz="0.0" 
                 iyy="${1/12*0.26134254*(0.149**2 + 0.057**2)}" iyz="0.0" 
                 izz="${1/12*0.26134254*(0.149**2 + 0.044**2)}" />
      </inertial>
    </link>

    <joint name="${prefix}_wrist_tilt_joint" type="revolute">
      <parent link="${prefix}_elbow_tilt_link" />
      <child link="${prefix}_wrist_tilt_link" />
      <origin rpy="0 0 0" xyz="0 -0.10275 0" />
      <axis xyz="0 0 1" />
      <limit effort="30" lower="${-M_PI/2.0}" upper="${M_PI/2.0}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_wrist_tilt_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 ${M_PI/2.0} 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/R_hand/R_hand_JOINT.stl"/>
        </geometry>
        <material name="black" />
      </visual>

      <collision>
        <origin xyz="0.0 -0.03 0.0" rpy="0.0 ${-M_PI/2.0} ${M_PI}" />
        <geometry>
          <box size="0.057 0.078 0.043"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 -0.023 0.0" rpy="0.0 ${M_PI/2.0} 0.0" />
        <mass value="0.15580857" />
        <inertia ixx="${1/12*0.15580851*(0.043**2 + 0.057**2)}" ixy="0.0" ixz="0.0" 
                 iyy="${1/12*0.15580851*(0.078**2 + 0.043**2)}" iyz="0.0" 
                 izz="${1/12*0.15580851*(0.078**2 + 0.057**2)}" />
      </inertial>
    </link>

    <!--plug-in to distribute joint condition data-->
    <gazebo>
      <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
        <jointName>${prefix}_shoulder_roll_joint, ${prefix}_shoulder_pan_joint, ${prefix}_elbow_tilt_joint, ${prefix}_wrist_tilt_joint</jointName>
      </plugin>
    </gazebo>

    <gazebo reference="${prefix}_shoulder_fixed_link">
      <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="${prefix}_shoulder_roll_link">
      <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="${prefix}_shoulder_pan_link">
      <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="${prefix}_elbow_tilt_link">
      <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="${prefix}_wrist_tilt_link">
      <material>Gazebo/Black</material>
    </gazebo>

    <xacro:right_arm_transmission prefix="${prefix}"/>

  </xacro:macro>
</robot>