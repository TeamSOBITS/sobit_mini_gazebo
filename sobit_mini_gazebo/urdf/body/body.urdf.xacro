<?xml version="1.0" encoding="UTF-8" ?>
<robot name="body" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find sobit_mini_description)/urdf/body/body.transmission.xacro" />

  <xacro:macro name="body" params="prefix parent">

    <joint name="${prefix}_small_gear_base_joint" type="fixed">
      <parent link="${parent}" />
      <child link="${prefix}_small_gear_base_link" />
      <origin xyz="0.0 -0.13925 0.0031" rpy="0 0 0" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="${prefix}_small_gear_base_link">
      <visual>
        <origin xyz="0.0 0.0 0.034" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/body/sobit_mini_small_gear_motor.stl" />
        </geometry>
        <material name="black" />
      </visual>

      <collision>
        <origin xyz="0.0125 0.0 0.017" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <box size="0.0285 0.0465 0.034"/>
        </geometry>
      </collision>
      
      <inertial>
        <origin xyz="0.0125 0.0 0.034" rpy="0.0 0.0 ${M_PI/2.0}" />
        <mass value="0.09065062" />
        <inertia ixx="${1/12*0.09065062*(0.034**2 + 0.0465**2)}" ixy="0.0" ixz="0.0"
                 iyy="${1/12*0.09065062*(0.0285**2 + 0.034**2)}" iyz="0.0" 
                 izz="${1/12*0.09065062*(0.0285**2 + 0.0465**2)}" />
      </inertial>
    </link>

    <joint name="${prefix}_roll_joint" type="revolute">
      <parent link="${prefix}_small_gear_base_link" />
      <child link="${prefix}_small_gear_link" />
      <origin xyz="0.0 0.0 0.036" rpy="0 0 0" />
      <axis xyz="0 0 -1" />
      <limit effort="30" lower="${-1.31825*M_PI}" upper="${1.31825*M_PI}" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_small_gear_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/body/sobit_mini_small_gear.stl" />
        </geometry>
        <material name="black" />
      </visual>

      <collision>
        <origin xyz="0.0 0.0 0.005" rpy="0.0 0.0 0.0" />
        <geometry>
          <cylinder length="0.01" radius="0.021" />
        </geometry>
      </collision>
      
      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="${M_PI/2.0} 0.0 ${M_PI/2.0}" />
        <mass value="0.01200705" />
        <inertia ixx="${1/12*0.01200705*(3*(0.02399**2 + 0.0045**2) + 0.01**2)}" ixy="0.0" ixz="0.0"
                 iyy="${1/12*0.01200705*(3*(0.02399**2 + 0.0045**2) + 0.01**2)}" iyz="0.0" 
                 izz="${1/2*0.01200705*(0.02399**2 + 0.0045**2)}" />
      </inertial>
    </link>


    <joint name="${prefix}_big_gear_base" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}_big_gear_base_link"/>
      <origin xyz="0.0 0.0 0.0031" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="${prefix}_big_gear_base_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/body/big_gear_base.stl" />
        </geometry>
        <material name="silver" />
      </visual>

      <collision>
        <origin xyz="0.0 0.0 0.0065" rpy="0.0 0.0 0.0" />
        <geometry>
          <box size="0.15 0.15 0.013"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <mass value="1.85710709" />
        <inertia ixx="${1/12*1.85710709*(0.013**2 + 0.15**2)}" ixy="0.0" ixz="0.0" 
                 iyy="${1/12*1.85710709*(0.15**2 + 0.013**2)}" iyz="0.0" 
                 izz="${1/12*1.85710709*(0.15**2 + 0.15**2)}" />
      </inertial>
    </link>


    <joint name="${prefix}_big_gear_base_joint" type="revolute">
      <parent link="${prefix}_big_gear_base_link" />
      <child link="${prefix}_roll_link" />
      <origin xyz="0.0 0.0 0.0325" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit effort="30" lower="${-M_PI/4.0}" upper="${M_PI/4.0}" velocity="${M_PI/2.0}" />
      <mimic joint="${prefix}_roll_joint" multiplier="0.1896551724" offset="0.0"/>
    </joint>

    <link name="${prefix}_roll_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/body/sobit_mini_big_gear.stl" />
        </geometry>
        <material name="black" />
      </visual>

      <collision>
        <origin xyz="0.0 0.0 -0.002" rpy="0.0 0.0 0.0" />
        <geometry>
          <cylinder length="0.033" radius="0.118" />
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 0.0 -0.02" rpy="0.0 0.0 0.0" />
        <mass value="0.37382712" />
        <inertia ixx="${1/12*0.37382712*(3*(0.118**2 + 0.104**2) + 0.033**2)}" ixy="0.0" ixz="0.0" 
                 iyy="${1/12*0.37382712*(3*(0.118**2 + 0.104**2) + 0.033**2)}" iyz="0.0" 
                 izz="${1/2*(0.118**2 + 0.104**2)}" />
      </inertial>
    </link>

    <joint name="${prefix}_big_gear_joint" type="fixed">
      <parent link="${prefix}_roll_link" />
      <child link="${prefix}_big_gear_link" />
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="${prefix}_big_gear_link"/>

    <joint name="${prefix}_back_pole_joint" type="fixed">
      <parent link="${prefix}_roll_link" />
      <child link="${prefix}_back_pole_link" />
      <origin xyz="-0.01 0.0 0.058" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="${prefix}_back_pole_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/body/sobit_mini_center_back.stl" />
        </geometry>
        <material name="black" />
      </visual>

      <collision>
        <origin xyz="-0.103 0.0 0.0" rpy="0 0 ${M_PI/2.0}" />
        <geometry>
          <box size="0.22 0.206 0.06"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 ${M_PI/2.0}" />
        <mass value="0.42402038" />
        <inertia ixx="${3/5*0.42402038*0.206**2 + 3/20*0.42402038*0.110**2}" ixy="0.0" ixz="0.0"
                 iyy="${3/5*0.42402038*0.206**2 + 3/20*0.42402038*0.110**2}" iyz="0.0" 
                 izz="${3/10*0.42402038*0.110**2}" />
      </inertial>
    </link>

    <joint name="${prefix}_front_pole_joint" type="fixed">
      <parent link="${prefix}_roll_link" />
      <child link="${prefix}_front_pole_link" />
      <origin xyz="0.0 0.0 0.0005" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="${prefix}_front_pole_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/body/spine.stl" />
        </geometry>
        <material name="black" />
      </visual>

      <collision>
        <origin xyz="0.0 0.0 0.258" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <box size="0.162 0.02 0.516"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 0.0 0.258" rpy="0.0 0.0 ${M_PI/2.0}" />
        <mass value="0.49416354" />
        <inertia ixx="${1/12*0.49416354*(0.02**2 + 0.516**2)}" ixy="0.0" ixz="0.0"
                 iyy="${1/12*0.49416354*(0.162**2 + 0.02**2)}" iyz="0.0" 
                 izz="${1/12*0.49416354*(0.162**2 + 0.516**2)}" />
      </inertial>
    </link>

    <joint name="${prefix}_sobit_mini_cover" type="fixed">
      <parent link="${prefix}_roll_link" />
      <child link="${prefix}_sobit_mini_cover" />
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="${prefix}_sobit_mini_cover">
      <visual>
        <origin xyz="0.0 0.0 0.459" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/body/sobit_mini_body_cover.dae" />
        </geometry>
      </visual>

      <inertial>
        <origin xyz="0.0 0.0 0.459" rpy="0.0 0.0 ${M_PI/2.0}" />
        <mass value="0.003" />
        <inertia ixx="0.0" ixy="0.0" ixz="0.0" 
                 iyy="0.0" iyz="0.0" 
                 izz="0.0" />
      </inertial>
    </link>

    <!--plug-in to distribute joint condition data-->
    <gazebo>
      <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
        <jointName>${prefix}_roll_joint</jointName>
      </plugin>
    </gazebo>


    <!-- the following is the template to mimic a joint -->
    <xacro:macro name="mimic_joint_plugin" params="name_prefix parent_joint mimic_joint has_pid:=false multiplier:=1.0 offset:=0 sensitiveness:=0.0 max_effort:=1.0 robot_namespace:=''">
      <gazebo>
        <plugin name="${name_prefix}mimic_joint_plugin" filename="libroboticsgroup_upatras_gazebo_mimic_joint_plugin.so">
          <joint>${parent_joint}</joint>
          <mimicJoint>${mimic_joint}</mimicJoint>
          <xacro:if value="${has_pid}">                     <!-- if set to true, PID parameters from "/gazebo_ros_control/pid_gains/${mimic_joint}" are loaded -->
            <hasPID />
          </xacro:if>
          <multiplier>${multiplier}</multiplier>
          <offset>${offset}</offset>
          <sensitiveness>${sensitiveness}</sensitiveness>   <!-- if absolute difference between setpoint and process value is below this threshold, do nothing; 0.0 = disable [rad] -->
          <maxEffort>${max_effort}</maxEffort>              <!-- only taken into account if has_pid:=true [Nm] -->
          <xacro:unless value="${robot_namespace == ''}">
            <robotNamespace>${robot_namespace}</robotNamespace>
          </xacro:unless>
        </plugin>
      </gazebo>
    </xacro:macro>

    <xacro:mimic_joint_plugin name_prefix="${prefix}_joint"
    parent_joint="${prefix}_roll_joint" mimic_joint="${prefix}_big_gear_base_joint"
    has_pid="false" multiplier="0.1896551724" max_effort="1.0" />

    <gazebo reference="${prefix}_small_gear_base_link">
      <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="${prefix}_small_gear_link">
      <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="${prefix}_big_gear_base_link">
      <material>Gazebo/Silver</material>
    </gazebo>
    <gazebo reference="${prefix}_roll_link">
      <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="${prefix}_back_pole_link">
      <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="${prefix}_front_pole_link">
      <material>Gazebo/Black</material>
    </gazebo>
    
    <xacro:body_transmission prefix="${prefix}"/>
  </xacro:macro>
</robot>