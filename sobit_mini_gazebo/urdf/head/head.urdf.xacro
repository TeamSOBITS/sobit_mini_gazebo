<?xml version="1.0" encoding="UTF-8" ?>
<robot name="head" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find sobit_mini_description)/urdf/head/head.transmission.xacro" />

  <xacro:macro name="head" params="prefix parent">

    <joint name="${prefix}_pan_joint" type="revolute">
      <parent link="${parent}" />
      <child link="${prefix}_pan_link" />
      <origin xyz="0.0 0.0 0.516" rpy="0.0 0.0 0.0" />
      <axis xyz="0 0 1" />
      <limit effort="30" lower="-1.57" upper="1.57" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_pan_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/head/HEAD_PAN_JOINT.stl" />
        </geometry>
        <material name="black" />
      </visual>

      <inertial>
        <origin xyz="0.0 -0.0015 0.045" rpy="0.0 0.0 ${M_PI/2.0}" />
        <mass value="0.18494494" />
        <inertia ixx="${1/12*0.18494494*(0.09**2 + 0.098**2)}" ixy="0.0" ixz="0.0" 
                 iyy="${1/12*0.18494494*(0.041**2 + 0.09**2)}" iyz="0.0" 
                 izz="${1/12*0.18494494*(0.041**2 + 0.098**2)}" />
      </inertial>
    </link>

    <joint name="${prefix}_tilt_joint" type="revolute">
      <parent link="${prefix}_pan_link" />
      <child link="${prefix}_tilt_link" />
      <origin xyz="0.0 0.0 0.017" rpy="0.0 0.0 0.0" />
      <axis xyz="0 -1 0" />
      <limit effort="30" lower="-1" upper="1" velocity="${M_PI/2.0}" />
    </joint>

    <link name="${prefix}_tilt_link">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${M_PI/2.0}" />
        <geometry>
          <mesh filename="package://sobit_mini_description/meshes/head/HEAD_TILT_JOINT.dae" />
        </geometry>
      </visual>

      <collision>
        <origin xyz="0.02 0.0 0.08" rpy="${M_PI/2.0} 0.0 0.0" />
        <geometry>
          <box size="0.215 0.17 0.226"/>
        </geometry>
      </collision>

      <inertial>
        <origin xyz="0.0 0.0 0.066" rpy="0.0 0.0 ${M_PI/2.0}" />
        <mass value="1.2021125" />
        <inertia ixx="${1/12*1.2021125*(0.226**2 + 0.215**2)}" ixy="0.0" ixz="0.0" 
                 iyy="${1/12*1.2021125*(0.17**2 + 0.226**2)}" iyz="0.0" 
                 izz="${1/12*1.2021125*(0.17**2 + 0.215**2)}" />
      </inertial>
    </link>


    <!--plug-in to distribute joint condition data-->
    <gazebo>
      <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
        <jointName>${prefix}_pan_joint, ${prefix}_tilt_joint</jointName>
      </plugin>
    </gazebo>

    <gazebo reference="${prefix}_pan_link">
      <material>Gazebo/Black</material>
    </gazebo>

    <xacro:head_transmission prefix="${prefix}"/>

  </xacro:macro>
</robot>